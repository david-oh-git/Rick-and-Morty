<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_characters_list_graph"
    tools:ignore="UnusedNavigation,UnusedIds"
    app:startDestination="@id/characters_list_fragment">


    <fragment
        app:moduleName=""
        android:id="@+id/characters_list_fragment"
        android:name="io.audioshinigami.characters.list.CharactersListFragment"
        android:label="Characters"
        tools:layout="@layout/fragment_characters_list"
        >
        <action
            android:id="@+id/action_characters_list_fragment_to_characterDetailFragment"
            app:destination="@id/characterDetailFragment" />
    </fragment>

    <fragment
        app:moduleName=""
        tools:layout="@layout/fragment_character_detail"
        android:id="@+id/characterDetailFragment"
        android:name="io.audioshinigami.characters.detail.CharacterDetailFragment"
        android:label="CharacterDetailFragment">

        <argument
            android:name="character_detail"
            app:argType="io.audioshinigami.characters.detail.models.CharacterDetail"
            />
    </fragment>


</navigation>
